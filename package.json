{
  "name": "vscode-rust-import",
  "displayName": "Rust Import Organizer",
  "description": "Organize Rust imports by sorting, grouping, and merging use statements",
  "version": "0.3.0",
  "publisher": "statiolake",
  "repository": {
    "type": "git",
    "url": "https://github.com/statiolake/vscode-rust-import"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:rust"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rust-import.organizeImports",
        "title": "Rust Import Organizer: Organize Imports"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rust-import.organizeImports",
          "when": "editorLangId == rust",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "Rust Import Organizer",
      "properties": {
        "rustImportOrganizer.enableAutoImport": {
          "type": "boolean",
          "default": true,
          "description": "Enable auto-import of unresolved symbols when organizing imports"
        },
        "rustImportOrganizer.enableGroupImports": {
          "type": "boolean",
          "default": true,
          "description": "Enable sorting and grouping of imports when organizing imports"
        },
        "rustImportOrganizer.enableRemoveUnusedImports": {
          "type": "boolean",
          "default": true,
          "description": "Enable removal of unused imports when organizing imports"
        },
        "rustImportOrganizer.useRustfmt": {
          "type": "boolean",
          "default": true,
          "description": "Format generated use statements with rustfmt to match project formatting style"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src && biome format src",
    "format": "biome format --write src",
    "test": "vscode-test",
    "publish": "vsce publish"
  },
  "dependencies": {
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3"
  }
}
